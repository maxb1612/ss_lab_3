@using Microsoft.AspNetCore.Mvc.TagHelpers

@{
    ViewData["Title"] = "Home page";
}

<div class="text-center">
    <form enctype="multipart/form-data" method="post" asp-controller="Img" asp-action="ImgShow">
        <div class="input-group mb-5">
        
            <div class="custom-file">
                <input type="file" name="imgFile" class="custom-file-input" id="imgInput" accept="image/bmp, image/jpeg, input/jpg, image/png" required="required">
                <label class="custom-file-label" for="imgInput">Виберіть файл</label>
            </div>
            <div class="input-group-append">
                <input type="submit" class="input-group-text" value="Завантажити">
            </div>
        </div>
    </form>
</div>