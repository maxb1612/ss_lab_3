@model WebApplication1.ViewModels.LoginViewModel

@{
    Layout = "_Layout";
}



<div class="py-5">
    <div class="container">
      <div class="row">
        <div class="col-md-5 mx-auto">
          <div class="mx-auto col-md-12 col-10 bg-white p-5">
            <h1 class="mb-4">Вхід</h1>
            <form  method="post" asp-controller="Account" asp-action="Login">
              <div asp-validation-summary="All" class="text-danger"></div>
              <div class="form-group mb-3">
                 <input asp-for="Email" type="email" class="form-control" placeholder="Email адреса" id="form9" required="required">
              </div>
              <div class="form-group mb-3">
                 <input asp-for="Password" type="password" class="form-control" placeholder="Пароль" id="form10" required="required">
                <small class="form-text text-muted text-right">
                  <a asp-action="Register"> Зареєструватися</a>
                </small>
              </div> <button type="submit" class="btn btn-primary">Увійти</button>
            </form>
          </div>
        </div>
      </div>
    </div>
  </div>